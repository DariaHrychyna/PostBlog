<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Latest posts</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: rgba(192, 166, 239, 0.493);
      margin: 0;
      padding: 0;
    }
    .hero {
      position: relative;
      background-image: url('/5178023.jpg');
      background-size: cover;
      background-position: center;
      height: 60vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
    }
    .hero h1 {
      color: white;
      font-size: 3em;
      text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7);
      margin-bottom: 20px;
    }
    .content {
      padding: 20px;
    }
    .search-container {
      margin-top: 15px;
      text-align: center;
    }
    .search-container input[type="text"] {
      padding: 10px;
      font-size: 1em;
      border: 1px solid #ccc;
      border-radius: 5px;
      width: 60%;
    }
    .search-container button {
      padding: 10px 20px;
      background-color: #395dfbc8;
      color: white;
      border: none;
      border-radius: 5px;
      font-size: 1em;
      margin-left: 5px;
      cursor: pointer;
    }
    .search-container button:hover {
      background-color: #2748a7c8;
    }
    .post {
      background-color: white;
      border: 1px solid #ddd;
      border-radius: 5px;
      padding: 20px;
      margin: 10px auto;
      width: 80%;
      box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
    }
    .post h2 {
      margin: 0;
      color: #007bff;
    }
    .post p {
      color: #555;
    }
    .post small {
      display: block;
      margin-top: 10px;
      color: #999;
    }
    .btn {
      display: inline-block;
      padding: 5px 10px;
      background-color: #4b6bfa85;
      color: white;
      border-radius: 5px;
      text-decoration: none;
      margin-top: 0.9px;
    }
    .btn:hover {
      background-color: #4b6bfa;
    }
    .btn-danger {
      background-color: #dc35469d;
    }
    .btn-danger:hover {
      background-color: #c82333;
    }
    .back-btn {
      position: absolute;
      top: 30px;
      left: 20px;
      padding: 10px 20px;
      background-color: #a980eb86;
      color: white;
      border-radius: 5px;
      text-decoration: none;
      font-size: 1em;
      z-index: 10; 
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    }
    .back-btn:hover {
      background-color: #9e6cefc7;
    }
  </style>
</head>
<body>
  <!-- Кнопка повернення на головну, що розташована на фоні фото -->
  <a href="/" class="back-btn">Back to Home</a>

  <div class="hero">
    <h1>Latest posts</h1>
    <div class="search-container">
      <form action="/search" method="GET">
        <input type="text" name="query" placeholder="write the keyword..." required>
        <button type="submit" class="btn">Search</button>
      </form>
    </div>
  </div>

  <!-- Контент сторінки -->
  <div class="content">
    <% posts.forEach(post => { %>
      <div class="post">
        <h2><%= post.title %></h2>
        <p><%= post.description %></p>
        <small>Author: <%= post.author %></small><br>
        <!-- Кнопка редагування -->
        <a href="/edit/<%= post._id %>" class="btn">Edit</a>
        <!-- Кнопка видалення -->
        <a href="/delete/<%= post._id %>" class="btn btn-danger">Delete</a>
      </div>
    <% }) %>
  </div>
</body>
</html>
